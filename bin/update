#!/bin/bash

set -e

echo_warn() { echo -e '\033[1;33m'"$1"'\033[0m'; }
echo_error()  { echo -e '\033[1;31mERROR: '"$1"'\033[0m'; }

echo_ok "Updating packages..."
tldr --update

echo_ok "Updating Oh My Zsh..."

echo_ok "Updating Vim-Plug..."
nvim +PlugUpdate +qall

echo_ok "Updating Applications from Mac App Store..."
mas upgrade

### Might require password ###

brew update
brew upgrade
brew cu -ay
brew cleanup
# Keep as last
softwareupdate -i -a

